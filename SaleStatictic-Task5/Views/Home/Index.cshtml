@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    
    <table class="table table-striped">
        @foreach (var b in ViewBag.Products)
        {
            <tr>
                <td>@b.Id</td>
                <td>@b.ProductName</td>
                <td>@b.ProductCost</td>
            </tr>
        }
    </table>
    <div>
        @using (Ajax.BeginForm("ProductSearch", new AjaxOptions { UpdateTargetId = "results",LoadingElementId="loading", 
            LoadingElementDuration=1000}))
        {
            <input type="text" name="name" />
            <input type="submit" value="Поиск" />
        }
        <div id="loading" style="display:none; color:Red; font-weight:bold;">
            <p>Loading...</p>
        </div>
        <div id="results"></div>
    </div>
    
    
    <div>
        @using (Ajax.BeginForm("SearchOrderByManager", new AjaxOptions { UpdateTargetId = "results2",LoadingElementId="loading2", 
            LoadingElementDuration=1000}))
        {
            <input type="text" name="name" />
            <input type="submit" value="Поиск" />
        }
        <div id="loading2" style="display:none; color:Red; font-weight:bold;">
            <p>Loading...</p>
        </div>
        <div id="results2"></div>
    </div>
</div>
@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")

